comment "apitrace needs a (e)glibc toolchain w/ C++"
	depends on !BR2_INSTALL_LIBSTDCPP || !BR2_TOOLCHAIN_USES_GLIBC

config BR2_PACKAGE_APITRACE
	bool "apitrace"
	depends on BR2_INSTALL_LIBSTDCPP
	depends on BR2_TOOLCHAIN_USES_GLIBC # uses glibc specific __libc_dlsym
	help
	  Trace and replay OpenGL and OpenGL ES APIs calls to/from a
	  file. You may install apitrace GUI from your distribution to
	  inspect generated traces.

	  http://apitrace.github.io/

menu "Extra options"

config BR2_PACKAGE_APITRACE_GUI
	bool  "apitrace GUI (experimental feature)"
	help
	  "Apitrace GUI can be used to analyse the trace files generated by apitrace"
	depends on BR2_PACKAGE_APITRACE && BR2_PACKAGE_QT5WEBKIT

comment "Apitrace GUI depends on apitrace and qt5webkit"
	depends on !BR2_PACKAGE_APITRACE || !BR2_PACKAGE_QT5WEBKIT

endmenu
